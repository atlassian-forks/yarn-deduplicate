{
	"$schema": "https://json.schemastore.org/tsconfig",

	"compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",

		"composite": true,
		"disableReferencedProjectLoad": true,

		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
        "allowJs": true,

		"importHelpers": true,
		"noEmitHelpers": true,
		"skipLibCheck": true,

		"lib": [ "ES2021" ],
		"module": "ES2020",
		"target": "ES2020",
		"esModuleInterop": true,
		"resolveJsonModule": false,

		"strict": true,
		"isolatedModules": true,

		"moduleResolution": "node",
		"forceConsistentCasingInFileNames": true
	},
    "include": ["./src/*"]
}


